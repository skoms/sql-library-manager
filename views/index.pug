extends layout 

block content 
  h1 Books 
  p 
    a.button(href="/books/new") Create New Book 
  p 
    include search-field
  table 
    thead 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year
    tbody 
      each book of books
        tr 
          td 
            a(href=`/books/${book.id}`)= book.title 
          td= book.author 
          td= book.genre
          td= book.year
