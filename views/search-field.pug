section.search-forms
  form.search-adv
    label(for="title-search") Advanced Search 
    input#title-search.search-adv(type="text", name="title-search" placeholder="title")
    input#author-search.search-adv(type="text", name="author-search" placeholder="author")
    input#genre-search.search-adv(type="text", name="genre-search" placeholder="genre")
    input#year-search.search-adv(type="text", name="year-search" placeholder="year")
    input.search(type="submit", value="Search")
  form.search
    label(for="search") Simple Search 
    input#search.search(type="text", name="search" placeholder="Search...")
    input.search(type="submit", value="Search")